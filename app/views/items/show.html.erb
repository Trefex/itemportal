<div class="container-fluid">
  <!-- <h2>Editing article</h2> -->
  <br />
  <div class="col-md-3 col-lg-3">
    <%= link_to image_tag(@item.trainimage.url(:medium), :class => "img-responsive"),
                  @item.trainimage.url(:original),
                  {"data-lightbox" => @item.trainimage.exists? ? @item.trainimage_file_name : "Default image",
                    "data-title" => @item.title} %>
    <%= link_to 'Edit', edit_item_path(@item), :class => "btn btn-primary" %>
    <%= link_to 'Back', items_path, :class => "btn btn-primary" %>
  </div>
  <div class="col-md-9">
    <div class="row">
      <div class="form-group col-lg-2 col-md-2">
        <label for="item_title">ID</label>
        <p class="form-control-static">6</p>
      </div>
      <div class="form-group col-lg-3 col-md-4">
        <label for="item_title">Last updated</label>
        <p class="form-control-static">2015-04-29 21:31:46 +0200</p>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-lg-4 col-md-4 required">
        <%= label(:title, "Name") %>
        <%= content_tag(:p, @item.title, :class => "form-control-static") %>
      </div>
      <div class="form-group col-lg-2 col-md-2">
        <%= label(:title, "Scale factor") %>
        <%= content_tag(:p, @item.scale, :class => "form-control-static") %>
      </div>
      <div class="form-group col-lg-2 col-md-2">
        <%= label(:title, "Original box?") %>
        <div class="">
          <%= check_box_tag(:inbox, "", @item.inbox?, :disabled => true)  %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-lg-4 col-md-4">
        <%= label(:title, "Serial") %>
        <%= content_tag(:p, @item.sn, :class => "form-control-static") %>
      </div>
      <div class="form-group col-lg-4 col-md-4">
        <%= label(:title, "Brand") %>
        <%= content_tag(:p, @item.brand, :class => "form-control-static") %>
      </div>
    </div>
    <div class="row">
    </div>
    <div class="row">
      <div class="form-group col-lg-4 col-md-4" id="datepicker">
        <%= label(:title, "Date-Vale Date") %>
        <%= content_tag(:p, @item.dateval_date, :class => "form-control-static") %>
      </div>
      <div class="form-group col-lg-4 col-md-4">
        <%= label(:title, "Date-Value Value (€)") %>
        <%= content_tag(:p, @item.dateval, :class => "form-control-static") %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-lg-4 col-md-4" id="datepicker">
        <%= label(:title, "Sell Date") %>
        <%= content_tag(:p, @item.selldate, :class => "form-control-static") %>
      </div>
      <div class="form-group col-lg-4 col-md-4">
        <%= label(:title, "Sell Price (€)") %>
        <%= content_tag(:p, @item.sellprice, :class => "form-control-static") %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-lg-4 col-md-4">
        <%= label(:title, "Description") %>
        <div class="">
          <%= simple_format @item.text %>
        </div>
      </div>
    </div>
  </div>

</div>
